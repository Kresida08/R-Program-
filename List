#3. Apply a function to all elements of a list. Use the lapply() function to apply a function to each element of a list.
 
number <- list(a=100:140,b=160:200,c=210:250)
print(number)

#apply mean (a fucntion) to each element of the list.
means <- lapply(number,mean) 
sum <- sapply(number, sum) #Will return a vector or matrix when possible.
flat <- vapply(number, sum, numeric(1)) #The output type will be specific numeric with 1.
----------------------------------------------------------------------------------------------------------------------------------------------------------------
#4. Flatten a List. Use unlist() to convert a list into a single vector.
flat <- unlist(number) 
mylst<- list(1,2,list(3,4))
unlist(mylst)
#Unlist will flatten completely. Turns the entire list into one atomic vector.
flat1<- unlist(mylst, recursive = FALSE)
does<- do.call(c, mylst)
#If true o/p will be (1,2,3,4), if false o/p will be 1 enter 2 enter 3... will flatten just one level.
----------------------------------------------------------------------------------------------------------------------------------------------------------------
#5. Filter list element (NOTE: Capital F is used in normal Filter small f is used in GGPLOT)
number <- list(a=100:140,b=160:200,c=210:250)
filter <- Filter(function(a) a>22, number$c) #filter is allies name and Filter is function name
print(filter)
#Filter using lapply + condition (returns the vector with more than 30 values as specified)
filtered <- number[lapply(number, length)>30]
filtered
#Filter by name (output keeps only a and c and not b)
filter1<- number[names(number) !="b"]
#Filter based on element content (the number 25 should be in the list then only the o/p will be returned or else the o/p will be blank)
my_lst <- list(a=c(10,15), b=c(20,25), c=30)
fil <- my_lst[sapply(my_lst,function(x) 25 %in% x)]
#Filter using tidyverse
library(purrr) #Install the package first with install.packages(purrr) then use the library
----------------------------------------------------------------------------------------------------------------------------------------------------------------
#6. Sort a List (will sort the numbers within the list not all individually)
#Sort element INSIDE each list item
qty <- list(a=c(12,25,65,34),b=c(4,9,2,10),c=c(100,24,87,99))
sorted <- lapply(qty,sort)
sorted
#Sort a list BY NAMES
name<-list(i=c(10,20,30),f=c(20,30,40),l=c(40,50,60))
sort_byname <- name[order(names(name))]
#Sort a list BY VALUE (Ascending Order)
lst<- list(a=70, b=50, c=90)
sort_byvalue <- lst[order(unlist(lst))]
#Sort a list of vectors by their FIRST element (Ascending order of the numbers in the vector)
sort <- qty[order(sapply(qty, function(x)x[1]))]
#Sort by the SUM of each list element
sort_bysum <- qty[order(sapply(qty,sum))] 
----------------------------------------------------------------------------------------------------------------------------------------------------------------
#7. Split data into a list. Use split() to divide a vector into a list based on a grouping factor.
#split <- split(what u want in o/p , what it will b compares to)
val <- c(20,25,30,35,40,45)
grps <- c("A","B","A","B","A","B")
split_lst <- split(val,grps)
#Split on bases of A and B those who got A and those who got B

Names <- c("Jack","Sandy","Ruben","John","Ayaan","Harshak")
Scores <- c(85,98,65,73,60,30)
Result <- c("Pass","Pass","Fail","Pass","Fail","Fail")
splt <- split(Names,Result)
#Output will be names based on Pass and Fail
----------------------------------------------------------------------------------------------------------------------------------------------------------------
#8.Find the Length of each list element (Use sapply() or lapply() with length)
suply <- list(a=10:20, b=c("A","B"), c=TRUE)
lenghts<- sapply(suply, length)
print(lenghts)

name <- list (x=c(10,20,35,45), y=c("Amit","Sumit"), z=50.9)
len <- sapply(name, length)
print(len)

my_lst <- list(10, 20, 30, "R")
length(my_lst) #Gives the length of the list
unlist(my_lst) #Convert list to a vector
