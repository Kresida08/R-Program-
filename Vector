#Numeric Vector
num<- c(20,30,40,50,60)
num

#Character Vector
fruits<- c("Apple","Kiwi","Banana","Fig","Papaya")
fruits

#Logical Vector
iseven <- c(FALSE,TRUE,TRUE,FALSE)
iseven

#Performing operation on vector
numplusten<- num+10
numplusten 

#Check if number > 25
grthn50<- num>25
grthn50

