#Access the 3rd element of the vector
prices[[3]]
#Repeat a vector as many times u want
rep(c(10,11,12),3)
v<- c(10,12,13,14)
rep(v,times=3) #Repeat a vector 3 times
rep(v,each=2)
rep(v,times = c(2,1,3,0)) #Repeat a specific element a number of times if not any element wanted put a 0
rep(12, times=6)
rep(v, length.out=10)

#Add vector
c(10,11,12)+c(10,11,12)
#Element wise addition
v1<-c(10,11,12,13)
v2<-c(20,21,22,23)
v1+v2
#Adding Multiple vectors
v1+v2+c(30,31,32,33)
#vector's of unequal length (Recycling Rule); R will 'recycle' (repeat) the shorter vector
v3<-c(11,12,13,14) #Longer object length should be a multiple of shorter object length
v4<-c(3,6)
v3+v4
#Add constant to a vector (Add's 10 to all the elements of the vector)
v3<-c(11,12,13,14)
v+10
#Remove 2nd element from the list (Use - sign to remove)
my_list <- c(10,11,12,13)
print(my_list)
#Remove specific element
my_list[-2] 
#Remove multiple positions
my_list[-c(2,4)]
#Remove elements by value
my_list[my_list !=12]
#Remove multiple values
my_list[!my_list %in% c(11,13)]
#Remove elements based on a condition
my_list[my_list>=12] #Elements greater than and equal to 12 will be returned as o/p
my_list[my_list<12] #Returns element less than 12
#Removes NA elements
v<-c(10,20,NA,40)
v[!is.na(v)]
#Remove duplicate values
v<-c(11,12,13,11,12)
unique(v)
#Mean of some number
mean(c(1,2,3,4))
#Combine 2 vector
mlist<-c(10,11,12,13)
vlist<-c(20,21,22,23)
c(mlist,vlist)
#Adding multiple vector's
clist<-c(30,31,32,33)
c(vlist,clist,mlist)
#Adds everything and becomes characters.
c(c(10,12,13,14),c("A","B","C"),c("True","False")) 
append(mlist,vlist)
#Create a sequence
seq(1:10)
seq(11,20)
0.048611111 #It is just a number

vec<- c(10,20,30,40,50,60,70)
vec[-1] #1st element is removed
vec[-c(2,3)]
