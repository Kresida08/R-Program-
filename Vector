#My own question:- Imagine u want to know how much salary u will have at the end of the year
#1st note the salary of every month
salary <- c(12000,13500,10000,8000,9000,15000,8750,13590,7620,8900,12500)
#2nd note the amount saved
saved <- c(2000,3000,2000,4000,1000,3500,500,850,900,1000,290)
#Calculate amount in hand
cash_in_hand <- salary-saved
print(cash_in_hand)
print(cash_in_hand[3]) #Will give the amt of cash_in_hand

----------------------------------------------------------------------------------------------------------------------------------------------------------------------
  
#Find all the ages above 18 and count of how many elements are greater than 18
Ages <- c(12,25,18,30,15,22)
ages_18 <- Ages [Ages>18]
ages_18

count_abv_18 <- length(ages_18)
count_abv_18

----------------------------------------------------------------------------------------------------------------------------------------------------------------------

#create 2 vector of even and odd no.s combine them and arrange in ascending order
even <- c(120,122,124,126,128,130)
odd <- c(121,123,125,127,129,131)

all_number <- c(even,odd)
all_number

sorted_num <- sort(all_number)
sorted_num

------------------------------------------------------------------------------------------------------------------------------------------------------------------------

#Create a vector temperature with value and find greater than and replace the greater than with NA
temp <- c(39,21,24,37,28,19)
#Find temp >35
temp_35 <- temp[temp>35]
temp_35
#Replace greater than 35 with NA
temp[temp>35]<- NA
temp

------------------------------------------------------------------------------------------------------------------------------------------------------------------------
  
#Minimum, Maximum and Average marks 
mrks <- c(98,64,56,87,35,23,30)
min <- min(mrks)
max <- max(mrks)
avg <- mean(mrks) #Average
min    
head(mrks,2) #Top 2/Highest 2
max
tail(mrks,2) #Last/lowest 2
avg

